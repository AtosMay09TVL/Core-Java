package Starm;
import java.util.Scanner;
public class Starm1 {
	public static void main(String[] args)
	{
		Scanner s=new Scanner(System.in);
		System.out.println("enter the number of matrix");
		int m=s.nextInt();
		for(int i=0;i<m;i++)
		{
			for(int j=0;j<m;j++)
			{
				if(i>=j)
				{
					System.out.print("*");
				}
				else
				{
					System.out.print(" ");
					
				}
			}
			System.out.println();
		}
	}
}
